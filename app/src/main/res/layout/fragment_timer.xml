<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerFragment">

    <Button
        android:id="@+id/timerStartBtn"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="15dp"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/storeTime"
        app:layout_constraintEnd_toEndOf="@+id/storeTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_meter" />

    <Button
        android:id="@+id/timerResetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="@+id/storeTime"
        app:layout_constraintEnd_toStartOf="@+id/timerSplitBtn"
        app:layout_constraintStart_toEndOf="@+id/storeTime" />

    <Button
        android:id="@+id/timerSplitBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:text="@string/split"
        app:layout_constraintBaseline_toBaselineOf="@+id/timerResetBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timerResetBtn" />

    <Chronometer
        android:id="@+id/c_meter"
        android:layout_width="149dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="76dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#092FEC"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/timerStartBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splitsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/timerResetBtn"
        app:layout_constraintStart_toStartOf="@+id/timerResetBtn" />

    <Button
        android:id="@+id/storeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="258dp"
        android:text="@string/store_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timerResetBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerStartBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>